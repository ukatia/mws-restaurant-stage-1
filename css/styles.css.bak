#restaurant-hours td {
  color: #666;
}

#reviews-list h3 {
	color: white;
	margin: 0;
	align-items: flex-end;
}

.ReviewUpperDiv {
	background-color: #444;
		border-top-left-radius: 20px;
	display: flex;
	flex-grow: 1;
	justify-content: space-between;
	align-items: flex-end;
	margin: 15px 0 0;
	overflow: hidden;
	padding: 5px 20px 10px;
	position: relative;
	width: 85%;
}

.ReviewUpperDiv p {
	color: white;
	line-height: 0;
}

.ReviewLowerDiv {
	background-color: #fff;
		border-bottom-right-radius: 20px;
	display: block;
	margin: 0;
	overflow: hidden;
	padding: 0 20px 20px;
	position: relative;
	width: 85%;
}

.ReviewRating {
	background-color: orange;
	width: 60px;
	border-radius: 2px;
	margin-top: 10px;
	padding-left: 5px;
	color: white;
	font-weight: bold;
}

/* ====================== Mobile Details ====================== */
@media only screen and (min-width: 1080px) and (max-width: 1500px) {
	#reviews-container {
		width: 48%;
	}
}


@media only screen and (min-width: 768px) and (max-width: 1079px) {
	.inside #map-container {
	  height: 15%;
	  position: relative;
	  width: 100%;
		margin-top: 50px;
	}

	#restaurant-container {
	  padding: 100px 0 30px 40px;
	  width: 95%;
	}

	#reviews-container {
	  padding: 30px 0 30px 40px;
	  width: 95%;
	}

	#breadcrumb {
			font-weight: bold;
	    width: calc(100% - 80px);
	}

	#breadcrumb li {
			font-size: 12pt;
	}

}

